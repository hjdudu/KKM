<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|bottom"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_map_list"
        android:layout_width="@dimen/px_1007"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gaode_map"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_above="@id/baidu_map"
            android:background="@null"
            android:text="高德地图"
            android:textColor="#333333"
            android:textSize="@dimen/px_52" />

        <View
            android:id="@+id/gaode_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E9E9EB" />

        <TextView
            android:id="@+id/baidu_map"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_above="@id/tencent_map"
            android:background="@null"
            android:text="百度地图"
            android:textColor="#333333"
            android:textSize="@dimen/px_52" />

        <View
            android:id="@+id/baidu_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E9E9EB" />

        <TextView
            android:id="@+id/tencent_map"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:text="腾讯地图"
            android:textColor="#333333"
            android:textSize="@dimen/px_52" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="@dimen/px_1007"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/px_14"
            android:layout_marginBottom="23dp"
            android:background="@drawable/dialog_background"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="@dimen/px_52" />
    </LinearLayout>

</LinearLayout>