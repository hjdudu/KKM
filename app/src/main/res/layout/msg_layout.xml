<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_230"
    android:gravity="center_vertical"
    android:id="@+id/ll_msg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_msg_icon"
            android:layout_width="@dimen/px_115"
            android:layout_height="@dimen/px_115"
            android:layout_marginLeft="@dimen/px_37"
            android:layout_marginRight="@dimen/px_45"
            android:background="@mipmap/user_xiaoxi_tishi_ic" />

        <TextView
            android:id="@+id/tv_msg_icon"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_115"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#FF000000"
            android:text="您预约的昌平回龙观VIP店成功，请准时到达店里"
            android:textSize="@dimen/px_37" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/px_46"
        android:gravity="center_vertical"
        android:text="2018/09/06"
        android:textColor="#FF999999"
        android:textSize="@dimen/px_37" />

</LinearLayout>