<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_140"
    android:layout_alignParentBottom="true"
    android:elevation="3dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/chat_to_beautician"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:drawablePadding="3dp"
        android:drawableTop="@mipmap/beautician_detail_chat_btn"
        android:gravity="center"
        android:text="聊天"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvBeauticianInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:drawablePadding="3dp"
        android:drawableTop="@mipmap/beautician_detail_beautician_btn"
        android:gravity="center"
        android:text="了解美容师"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvAddFriends"
        android:layout_width="84dp"
        android:layout_height="match_parent"
        android:background="#7AD2D2"
        android:drawablePadding="3dp"
        android:drawableTop="@mipmap/beautician_detail_friends_btn"
        android:gravity="center"
        android:text="加为好友"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>
