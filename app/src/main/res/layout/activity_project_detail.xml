<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e6e8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutBottomBar"
        android:orientation="vertical">

        <include layout="@layout/layout_title_bar" />

        <ScrollView
            android:id="@+id/scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/topLayout"
                    layout="@layout/section_project_detail_top_head_layout" />

                <include
                    layout="@layout/section_project_detail_content_layout"
                    android:layout_marginTop="@dimen/px_29"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/topLayout" />

                <include
                    layout="@layout/section_detail_select_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/topLayout" />

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <include
        android:id="@+id/layoutBottomBar"
        layout="@layout/section_project_detail_bottom_bar_layout" />

    <com.kekemei.kekemei.view.MultipleStatusView
        android:id="@+id/multiple_status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
