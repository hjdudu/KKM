<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_433"
    android:layout_height="@dimen/px_677"
    android:layout_marginBottom="1px"
    android:layout_marginLeft="@dimen/px_19"
    android:layout_marginRight="@dimen/px_8"
    android:background="@drawable/shape_home_shop_bg"
    android:elevation="1dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_shop_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_311"
        android:background="@drawable/shape_home_shop_image_bg"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_36"
            android:layout_weight="1"
            android:text="西直门店"
            android:textColor="#FF333333"
            android:textSize="@dimen/px_46" />

        <TextView
            android:id="@+id/xiangqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_30"
            android:text="详情  >"
            android:textColor="#FF999999"
            android:textSize="@dimen/px_37" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/px_36">

        <TextView
            android:id="@+id/starPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_36"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="4.9  棒极啦"
            android:textColor="#FF7AD2D2"
            android:textSize="@dimen/px_35" />

        <TextView
            android:id="@+id/commentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_30"
            android:maxLines="1"
            android:text="42条评论"
            android:textColor="#FF999999"
            android:textSize="@dimen/px_26" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/px_26">

        <TextView
            android:id="@+id/youhuiquan"
            android:layout_width="@dimen/px_58"
            android:layout_height="@dimen/px_29"
            android:layout_marginLeft="@dimen/px_36"
            android:background="@drawable/btn_red_background"
            android:gravity="center"
            android:text="优惠券"
            android:textColor="#FFFF6C70"
            android:textSize="@dimen/px_14" />

        <TextView
            android:id="@+id/hongbao"
            android:layout_width="@dimen/px_58"
            android:layout_height="@dimen/px_29"
            android:layout_marginLeft="@dimen/px_19"
            android:background="@drawable/btn_red_background"
            android:gravity="center"
            android:text="红包"
            android:textColor="#FFFF6C70"
            android:textSize="@dimen/px_14" />

        <TextView
            android:id="@+id/miaosha"
            android:layout_width="@dimen/px_58"
            android:layout_height="@dimen/px_29"
            android:layout_marginLeft="@dimen/px_19"
            android:background="@drawable/btn_red_background"
            android:gravity="center"
            android:text="秒杀"
            android:textColor="#FFFF6C70"
            android:textSize="@dimen/px_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/px_42">

        <TextView
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_36"
            android:layout_weight="1"
            android:text="距您0.8公里"
            android:textColor="#FF999999"
            android:textSize="@dimen/px_26" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_30"
            android:text="￥288起"
            android:textColor="#FFFF6C70"
            android:textSize="@dimen/px_35" />

    </LinearLayout>

    <Button
        android:id="@+id/in_this"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_65"
        android:layout_marginTop="@dimen/px_17"
        android:background="@drawable/btn_bottom_conrners_background"
        android:text="进店看看"
        android:textColor="#FF7AD2D2"
        android:textSize="@dimen/px_29" />
</LinearLayout>