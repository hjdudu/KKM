<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/px_30"
    android:layout_marginRight="@dimen/px_30"
    android:layout_height="@dimen/px_461"
    android:layout_marginBottom="@dimen/px_43"
    android:background="@drawable/btn_white_background"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:id="@+id/ll_shop_list_item">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/px_66">

        <ImageView
            android:id="@+id/iv_shop_pic"
            android:layout_width="@dimen/px_233"
            android:layout_height="@dimen/px_228"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/px_50"
            android:src="@mipmap/shop_detail_photo_pic" />

        <Button
            android:id="@+id/btn_buy_now"
            android:layout_width="@dimen/px_233"
            android:layout_height="@dimen/px_69"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px_48"
            android:background="@drawable/refund_red_btn_background"
            android:text="立即购买"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/px_37" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_73">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_35"
            android:text="昌平回龙观东大街直营店"
            android:textColor="#FF333333"
            android:textSize="@dimen/px_46" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/px_28">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="638人预约"
                android:textColor="#FF999999"
                android:textSize="@dimen/px_37" />

            <TextView
                android:id="@+id/tv_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_33"
                android:text="距离912M"
                android:textColor="#FF999999"
                android:textSize="@dimen/px_37" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pingjia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_16">

            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="@dimen/px_37"
                android:layout_height="@dimen/px_37"
                android:layout_marginRight="@dimen/px_7"
                android:src="@mipmap/beautician_reduce_ic" />

            <TextView
                android:id="@+id/tv_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue_with_corners_background"
                android:paddingLeft="@dimen/px_4"
                android:paddingRight="@dimen/px_4"
                android:text="领红包减"
                android:textColor="#FF7AD2D2"
                android:textSize="@dimen/px_29" />

            <ImageView
                android:id="@+id/iv_envelopes"
                android:layout_width="@dimen/px_37"
                android:layout_height="@dimen/px_37"
                android:layout_marginLeft="@dimen/px_43"
                android:layout_marginRight="@dimen/px_7"
                android:src="@mipmap/beautician_envelopes_ic" />

            <TextView
                android:id="@+id/tv_envelopes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue_with_corners_background"
                android:paddingLeft="@dimen/px_4"
                android:paddingRight="@dimen/px_4"
                android:text="满200减50"
                android:textColor="#FF7AD2D2"
                android:textSize="@dimen/px_29" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/px_28">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已评论"
                android:textColor="#FF999999"
                android:textSize="@dimen/px_29" />

            <TextView
                android:id="@+id/tv_pinglun_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="638"
                android:textColor="#FFFF6C70"
                android:textSize="@dimen/px_29" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textColor="#FF999999"
                android:textSize="@dimen/px_29" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_46"
                android:text="已服务"
                android:textColor="#FF999999"
                android:textSize="@dimen/px_29" />

            <TextView
                android:id="@+id/tv_fuwu_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="222"
                android:textColor="#FFFF6C70"
                android:textSize="@dimen/px_29" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textColor="#FF999999"
                android:textSize="@dimen/px_29" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_20">

            <com.kekemei.kekemei.view.StarBar
                android:id="@+id/star_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ratingbar:changeEnable="false"
                ratingbar:starCount="5"
                ratingbar:starDistance="7dp"
                ratingbar:starEmpty="@mipmap/beautician_score_empty_ic"
                ratingbar:starFill="@mipmap/beautician_score_full_ic"
                ratingbar:starSize="@dimen/px_40" />


            <TextView
                android:layout_marginLeft="@dimen/px_68"
                android:id="@+id/tv_manyidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满意度：97%"
                android:textColor="#FF999999"
                android:textSize="@dimen/px_32" />


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/px_35">

            <ImageView
                android:layout_width="@dimen/px_37"
                android:layout_height="@dimen/px_37"
                android:src="@mipmap/beautician_detail_address_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_17"
                android:text="品质保障"
                android:textColor="#FF5E5E5E"
                android:textSize="@dimen/px_29" />

            <ImageView
                android:layout_width="@dimen/px_37"
                android:layout_height="@dimen/px_37"
                android:layout_marginLeft="@dimen/px_50"
                android:src="@mipmap/beautician_detail_address_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_17"
                android:text="随时调换"
                android:textColor="#FF5E5E5E"
                android:textSize="@dimen/px_29" />

            <ImageView
                android:layout_width="@dimen/px_37"
                android:layout_height="@dimen/px_37"
                android:layout_marginLeft="@dimen/px_50"
                android:src="@mipmap/beautician_detail_address_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_17"
                android:text="7天退款"
                android:textColor="#FF5E5E5E"
                android:textSize="@dimen/px_29" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>