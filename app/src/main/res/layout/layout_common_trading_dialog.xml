<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_layout_bg">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/px_48"
        android:layout_height="@dimen/px_48"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_42"
        android:layout_marginTop="@dimen/px_42"
        android:src="@mipmap/user_info_dialog_close" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivClose"
        android:listSelector="@color/transparent"
        android:numColumns="2"
        android:paddingBottom="@dimen/px_70"
        android:paddingLeft="@dimen/px_19"
        android:paddingRight="@dimen/px_19"
        android:paddingTop="@dimen/px_88"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/px_81" />
</RelativeLayout>