<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_177"
    android:layout_marginLeft="@dimen/px_35"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费赠送"
            android:textColor="#FF333333"
            android:textSize="@dimen/px_40" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_18"
            android:text="2019-12-12   12:30"
            android:textColor="#FFC1C1C1"
            android:textSize="@dimen/px_29" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/px_35"
        android:text="+  10.00"
        android:textColor="#FFFF6C70"
        android:textSize="@dimen/px_40" />

</LinearLayout>