<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/date_picker_height"
        android:background="@color/background">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/date_picker_text_padding_left"
            android:text="取消"
            android:textColor="#81838E"
            android:textSize="@dimen/date_picker_text_size" />



        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/date_picker_text_padding_right"
            android:text="确认"
            android:textColor="#FF7AD2D2"
            android:textSize="@dimen/date_picker_text_size"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E6E8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/date_picker_time_height"
            android:layout_centerHorizontal="true"
            android:background="@color/background"
            android:orientation="horizontal">

            <com.kekemei.kekemei.utils.DatePickerView
                android:id="@+id/year_pv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/year_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="年"
                android:textColor="@color/text2"
                android:textSize="@dimen/px_58" />

            <com.kekemei.kekemei.utils.DatePickerView
                android:id="@+id/month_pv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/month_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="月"
                android:textColor="@color/text2"
                android:textSize="@dimen/px_58" />

            <com.kekemei.kekemei.utils.DatePickerView
                android:id="@+id/day_pv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/day_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/text2"
                android:textSize="@dimen/px_58" />

            <com.kekemei.kekemei.utils.DatePickerView
                android:id="@+id/hour_pv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/hour_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="时"
                android:textColor="@color/text2"
                android:textSize="@dimen/px_58" />

            <com.kekemei.kekemei.utils.DatePickerView
                android:id="@+id/minute_pv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/minute_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="分"
                android:textColor="@color/text2"
                android:textSize="@dimen/px_58" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>