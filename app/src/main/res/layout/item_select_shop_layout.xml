<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:layout_marginBottom="@dimen/px_43"
    android:layout_marginLeft="@dimen/px_30"
    android:layout_marginRight="@dimen/px_30"
    android:layout_marginTop="@dimen/px_43"
    android:background="@drawable/btn_white_background"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/px_233"
        android:layout_height="@dimen/px_228"
        android:layout_marginLeft="@dimen/px_63"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/px_50"
        android:background="@mipmap/beautician_detail_photo_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_73">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_50"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/a_name"
            android:textColor="#FF333333"
            android:textSize="@dimen/px_46" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_26"
            android:ellipsize="end"
            android:lines="2"
            android:text="@string/a_name"
            android:textColor="#FF333333"
            android:textSize="@dimen/px_40" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/px_23">

            <TextView
                android:id="@+id/tvAppointmentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="638人预约"
                android:textColor="#FF999999"
                android:textSize="@dimen/px_37" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_36"
                android:text="距离912M"
                android:textColor="#FF999999"
                android:textSize="@dimen/px_37" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>