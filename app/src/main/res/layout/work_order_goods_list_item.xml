<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/work_order_goods_item_hight"
    android:background="@color/work_order_goods_item_bg"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/work_order_item_left_margent"
    android:paddingRight="@dimen/work_order_item_left_margent">


    <com.kekemei.kekemei.view.ImageViewImp
        android:id="@+id/goods_img"
        android:layout_width="@dimen/work_order_goods_icon_size"
        android:layout_height="@dimen/work_order_goods_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/order_goods_icon_bg"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/goods_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/work_deliver_line_hight"
        android:layout_toRightOf="@id/goods_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Apple iPhone 银色移动限量版，3Dtouch IOS11.3支持移动公交卡412412342432"
        android:textColor="@color/work_order_gray_text"
        android:textSize="@dimen/work_order_item_order_status_size"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/goods_img"
        android:layout_alignLeft="@id/goods_title"
        android:text="¥16.6"
        android:textColor="#FF6C70"
        android:textSize="@dimen/work_order_item_order_status_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/goods_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/goods_price"
        android:gravity="center"
        android:text="x14"
        android:textColor="@color/work_order_gray_text"
        android:textSize="@dimen/work_order_item_order_status_size" />

</RelativeLayout>
